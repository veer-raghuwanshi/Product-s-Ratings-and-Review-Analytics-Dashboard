PORT=5000
DB_HOST=your-db-host
DB_PORT=3306
DB_NAME=product_analytics
DB_USER=your-db-user
DB_PASSWORD=your_mysql_password

# Optional: full connection string (recommended for Aiven)
# Example:
# DATABASE_URL=mysql://user:password@host:port/dbname?ssl-mode=REQUIRED
DATABASE_URL=

# SSL options (required for Aiven)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
# Relative to backend working directory, e.g. certs/aiven-ca.pem
DB_SSL_CA_PATH=
# Alternative to file path: paste PEM as one line with \n escaped
DB_SSL_CA=
